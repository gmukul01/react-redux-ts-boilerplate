{
    "compilerOptions": {
        "allowJs": true,
        "lib": ["es2015", "dom"],
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noEmit": true,
        "rootDir": "../",
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "target": "esnext",
        "types": ["webpack-env", "jest"],
        "baseUrl": "src",
        "paths": {
            "@components": ["./components"],
            "@components/*": ["./components/*"],
            "@store": ["./store"],
            "@store/*": ["./store/*"],
            "@theme": ["./theme"],
            "@theme/*": ["./theme/*"],
            "@utils/*": ["./utils/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
