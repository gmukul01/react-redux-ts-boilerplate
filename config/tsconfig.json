{
    "compilerOptions": {
        "allowJs": true,
        "lib": ["es2015", "dom"],
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noEmit": true,
        "rootDir": "../",
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "target": "esnext",
        "types": ["webpack-env", "jest"]
    },
    "include": ["../src"],
    "exclude": ["../node_modules/"]
}
